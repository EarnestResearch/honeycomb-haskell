cabal-version:      >=1.10

-- Initial package description 'example.cabal' generated by 'cabal init'.
-- For further documentation, see http://haskell.org/cabal/users-guide/

name:               honeycomb-example
version:            0.1.0.0
license-file:       LICENSE
author:             Gary Coady
maintainer:         gcoady@earnestresearch.com
build-type:         Simple
extra-source-files: CHANGELOG.md

executable honeycomb-example
  main-is:          Main.hs
  ghc-options:
    -threaded -Wall -Wcompat -Widentities -Wincomplete-record-updates
    -Wincomplete-uni-patterns -Wpartial-fields -Wredundant-constraints

  if impl(ghc >=8.2.0)
    ghc-options: -fhide-source-paths

  if impl(ghc >=8.8.0)
    ghc-options: -fwrite-ide-info

  -- other-modules:
  -- other-extensions:
  build-depends:
      base                          >=4.13 && <4.14
    , honeycomb
    , honeycomb-servant-client-rio
    , honeycomb-servant-server-rio
    , hostname
    , http-client
    , rio
    , servant
    , servant-client
    , servant-client-core
    , servant-server
    , warp

  hs-source-dirs:   src
  default-language: Haskell2010
